    <table class="table">
        <tbody>
            <tr>
                <th>IdPost</th>
                <td>{{ poste.idPost }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ poste.description }}</td>
            </tr>
            <tr>
                <th>NomPost</th>
                <td>{{ poste.nomPost }}</td>
            </tr>
